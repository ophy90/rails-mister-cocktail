<h1>Fancy Cocktail bar</h1>
<div class="container">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, crop: :fill %>')">
        <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
      </div>
    <%end%>
</div>

<p><%= link_to "Add a new cocktail", new_cocktail_path %></p>
